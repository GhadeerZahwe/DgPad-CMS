@model IEnumerable<Post>

@{
    ViewData["Title"] = "Post";
}

<h1>Post</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-borderless table-striped table-earning">
    <thead>
        <tr>
            <th>
                PostTitle
            </th>
         @*   <th>
                CreationDate
            </th>*@  
         @*   <th>
                Summary
            </th>*@
         
        
            <th>
                PostType
            </th> 
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.PostTitle
            </td>
          @*  <td>
                @item.CreationDate
            </td>
            <td>
                @Html.Raw(item.Details)
            </td>*@    
           @* <td>
             @Html.Raw(item.Summary)
            </td>*@
            <td>
                @item.PostType.Title
            </td>
             <td>
                <img src="~/media/posts/@item.Image" width="100px" />
            </td>
       
            
            <td>
                <a asp-action="Edit" asp-route-postId="@item.PostId" asp-route-postTypeId="@item.PostType.PostTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
