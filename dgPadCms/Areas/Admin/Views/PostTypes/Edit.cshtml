@model Common.CreatePostTypeViewModel


@{
    ViewData["Title"] = "Edit PostTypes";
}


<div class="row ">
<div class="col-md-4 au-card recent-report">
<h2>Edit PostTypes</h2>
 </div>
 </div>
<div class="row">
    <div class="col-md-4 au-card recent-report">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group checkbox checkboxlist col-sm-10">
                     <br />
                <table>
                    <h5>Choose at least one Taxonomy:</h5>
                @for(int i=0; i<Model.Taxonomies.Count ;i++)
                {         <tr>
                            
                    <input asp-for="Taxonomies[i].Value" type="hidden" class="control-label" /> 
                     <br>
                    <input asp-for="Taxonomies[i].Selected"  class="control-label" /> @Model.Taxonomies[i].Text
                   
                    </tr>
                }
               </table>
            </div>
       @*     <div class="form-group">
                <label asp-for="TaxonomyId" class="control-label"></label>
                  <select asp-for="TaxonomyId" asp-items="@ViewBag.TaxonomyId" class="form-control">
                    <option value="0">Choose a Taxonomy</option>
                </select>
                <span asp-validation-for="TaxonomyId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
